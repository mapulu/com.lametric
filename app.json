{
  "id": "com.lametric",
  "version": "1.0.5",
  "compatibility": ">=1.5.3",
  "category": "internet",
  "name": {
    "en": "LaMetric Time",
    "nl": "LaMetric Time",
    "de": "LaMetric Time"
  },
  "description": {
    "en": "Display Homey notifications on your LaMetric Time.",
    "nl": "Toon notificaties op LaMetric Time.",
    "de": "Zeigt Homey-Benachrichtigungen auf deiner LaMetric Time an."
  },
  "author": {
    "name": "Mark Swift",
    "email": "markaswift@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Mark Swift",
        "email": "markaswift@gmail.com"
      },{
        "name": "Erik van Dongen",
        "website":"http://github.com/irritanterik/",
        "email": "gdvandongen@gmail.com"
      }
    ]
  },
  "images":{
    "large":"./assets/images/large.png",
    "small":"./assets/images/small.png"
  },
  "drivers": [
    {
      "id": "lametric",
      "name": {
        "en": "LaMetric Time"
      },
      "class": "other",
      "capabilities": ["volume_set"],
      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": []
          },{
            "id": "slider",
            "capabilities": ["volume_set"]
          }
        ]
      },
      "images": {
        "large": "./assets/device_large.jpg",
        "small": "./assets/device_small.jpg"
      },
      "settings":[
        {
          "type":"group",
          "label":{
            "en":"General settings",
            "nl":"Instellingen",
            "de":"Einstellungen"
          },
          "children":[
            {
              "id":"ipv4",
              "type":"text",
              "value":"192.168.1.100",
              "label":{
                "en":"Local IP address",
                "nl":"Lokaal IP adres",
                "de":"Lokale IP-Adresse"
              }
            }
          ]
        }
      ],
      "pair":[
        {
          "id": "start"
        },{
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },{
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {
    "actions": [
      { "id": "alarmClockSet",
        "title": {
          "en": "Set alarm clock",
          "nl": "Wekker instellen",
          "de": "Wecker stellen"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=lametric"
          },{
            "name": "time",
            "type": "time",
            "placeholder": {
              "en": "Time",
              "nl": "Tijd",
              "de": "Zeit"
            }
          },{
            "name": "radio",
            "type": "dropdown",
            "values": [
              {
                "id": "true",
                "label": {
                  "en": "Radio",
                  "nl": "Radio",
                  "de": "Radio"
                }
              },{
                "id": "false",
                "label": {
                  "en": "Buzzer",
                  "nl": "Pieper",
                  "de": "Summer"
                }
              }
            ]
          }
        ]
      },
      { "id": "alarmClockUnset",
        "title": {
          "en": "Disable alarm clock",
          "nl": "Wekker uitzetten",
          "de": "Wecker deaktivieren"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=lametric"
          }
        ]
      },
      { "id": "notificationText",
        "title": {
          "en": "Notification",
          "nl": "Notificatie",
          "de": "Benachrichtigung"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=lametric"
          },{
            "name": "priority",
            "type": "dropdown",
            "values": [
              { "id": "info", "label": { "en": "info", "nl": "info", "de": "Info" }},
              { "id": "warning", "label": { "en": "warning", "nl": "warning", "de": "Warnung" }},
              { "id": "critical", "label": { "en": "critical", "nl": "critical", "de": "Kritisch" }}
            ]
          },{
            "name": "icontype",
            "type": "dropdown",
            "values": [
              { "id": "none", "label": { "en": "none", "nl": "geen", "de": "Kein" }},
              { "id": "info", "label": { "en": "info", "nl": "info", "de": "Info"  }},
              { "id": "alert", "label": { "en": "alert", "nl": "waarschuwing", "de": "Alarm" }}
            ]
          },{
            "name": "text",
            "type": "text",
            "placeholder": {
              "en": "Text",
              "nl": "Bericht",
              "de": "Text"
            }
          }
        ]
      },
      { "id": "notificationTextIcon",
        "title": {
          "en": "Notification (icon)",
          "nl": "Notificatie (icoon)",
          "de": "Benachrichtigung (Icon)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=lametric"
          },{
            "name": "priority",
            "type": "dropdown",
            "values": [
              { "id": "info", "label": { "en": "info", "nl": "info", "de": "Info" }},
              { "id": "warning", "label": { "en": "warning", "nl": "warning", "de": "Warnung" }},
              { "id": "critical", "label": { "en": "critical", "nl": "critical", "de": "Kritisch" }}
            ]
          },{
            "name": "icontype",
            "type": "dropdown",
            "values": [
              { "id": "none", "label": { "en": "none", "nl": "geen", "de": "Kein" }},
              { "id": "info", "label": { "en": "info", "nl": "info", "de": "Info"  }},
              { "id": "alert", "label": { "en": "alert", "nl": "waarschuwing", "de": "Alarm" }}
            ]
          },{
            "name": "text",
            "type": "text",
            "placeholder": {
              "en": "Text",
              "nl": "Bericht",
              "de": "Text"
            }
          },{
            "name": "icon",
            "type": "autocomplete",
            "placeholder": {
              "en": "Icon"
            }
          }
        ]
      },
      { "id": "notificationTextIconSound",
        "title": {
          "en": "Notification (icon and sound)",
          "nl": "Notificatie (icoon en geluid)",
          "de": "Benachrichtigung (Icon und Ton)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=lametric"
          },{
            "name": "priority",
            "type": "dropdown",
            "values": [
              { "id": "info", "label": { "en": "info", "nl": "info", "de": "Info" }},
              { "id": "warning", "label": { "en": "warning", "nl": "warning", "de": "Warnung" }},
              { "id": "critical", "label": { "en": "critical", "nl": "critical", "de": "Kritisch" }}
            ]
          },{
            "name": "icontype",
            "type": "dropdown",
            "values": [
              { "id": "none", "label": { "en": "none", "nl": "geen", "de": "Kein" }},
              { "id": "info", "label": { "en": "info", "nl": "info", "de": "Info"  }},
              { "id": "alert", "label": { "en": "alert", "nl": "waarschuwing", "de": "Alarm" }}
            ]
          },{
            "name": "text",
            "type": "text",
            "placeholder": {
              "en": "Text",
              "nl": "Bericht",
              "de": "Text"
            }
          },{
            "name": "icon",
            "type": "autocomplete",
            "placeholder": {
              "en": "Icon"
            }
          },{
            "name": "sound",
            "type": "autocomplete",
            "placeholder": {
              "en": "Sound",
              "nl": "Geluid",
              "de": "Ton"
            }
          },{
            "name": "repeatcount",
            "type": "text",
            "placeholder": {
              "en": "1-50",
              "nl": "1-50",
              "de": "1-50"
            }
          }
        ]
      },
      { "id": "notificationTextSound",
        "title": {
          "en": "Notification (sound)",
          "nl": "Notificatie (geluid)",
          "de": "Benachrichtigung (Ton)"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=lametric"
          },{
            "name": "priority",
            "type": "dropdown",
            "values": [
              { "id": "info", "label": { "en": "info", "nl": "info", "de": "Info" }},
              { "id": "warning", "label": { "en": "warning", "nl": "warning", "de": "Warnung" }},
              { "id": "critical", "label": { "en": "critical", "nl": "critical", "de": "Kritisch" }}
            ]
          },{
            "name": "icontype",
            "type": "dropdown",
            "values": [
              { "id": "none", "label": { "en": "none", "nl": "geen", "de": "Kein" }},
              { "id": "info", "label": { "en": "info", "nl": "info", "de": "Info"  }},
              { "id": "alert", "label": { "en": "alert", "nl": "waarschuwing", "de": "Alarm" }}
            ]
          },{
            "name": "text",
            "type": "text",
            "placeholder": {
              "en": "Text",
              "nl": "Bericht",
              "de": "Text"
            }
          },{
            "name": "sound",
            "type": "autocomplete",
            "placeholder": {
              "en": "Sound",
              "nl": "Geluid",
              "de": "Ton"
            }
          },{
            "name": "repeatcount",
            "type": "text",
            "placeholder": {
              "en": "1-50",
              "nl": "1-50",
              "de": "1-50"
            }
          }
        ]
      },
      { "id": "radioAction",
        "title": {
          "en": "Radio",
          "nl": "Radio",
          "de": "Radio"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=lametric"
          },{
            "name": "action",
            "type": "dropdown",
            "values": [
              {
                "id": "radio.play",
                "label": {
                  "en": "Play",
                  "nl": "Afspelen",
                  "de": "Abspielen"
                }
              },{
                "id": "radio.stop",
                "label": {
                  "en": "Stop",
                  "nl": "Stop",
                  "de": "Stoppen"
                }
              },{
                "id": "radio.next",
                "label": {
                  "en": "Next station",
                  "nl": "Volgende station",
                  "de": "Nächster Sender"
                }
              }
            ]
          }
        ]
      },
      { "id": "setVolume",
        "title": {
          "en": "Set volume",
          "nl": "Instellen volume",
          "de": "Lautstärke einstellen"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter":"driver_id=lametric"
          },{
            "name": "volume",
            "type": "range",
            "min": 0,
            "max": 100,
            "step": 1,
            "label": "%",
            "labelDecimals": 0
          }
        ]
      },
      { "id": "showWidget",
        "title": {
          "en": "Show widget",
          "nl": "Toon widget",
          "de": "Widget anzeigen"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=lametric"
          },{
            "name": "widget",
            "type": "autocomplete",
            "placeholder": {
              "en": "Select widget",
              "nl": "Kies widget",
              "de": "Widget auswählen"
            }
          }
        ]
      },
      { "id": "showWidgetNextPrev",
        "title": {
          "en": "Change widget",
          "nl": "Verander widget",
          "de": "Widget ändern"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=lametric"
          },{
            "name": "direction",
            "type": "dropdown",
            "values": [
              {
                "id": "Previous",
                "label": {
                  "en": "Previous",
                  "nl": "Vorige",
                  "de": "Vorheriges"
                }
              },{
                "id": "Next",
                "label": {
                  "en": "Next",
                  "nl": "Volgende",
                  "de": "Nächstes"
                }
              }
            ]
          }
        ]
      },
      { "id": "stopwatchAction",
        "title": {
          "en": "Stopwatch",
          "nl": "Stopwatch",
          "de": "Stoppuhr"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=lametric"
          },{
            "name": "action",
            "type": "dropdown",
            "values": [
              {
                "id": "stopwatch.pause",
                "label": {
                  "en": "Pause",
                  "nl": "Pauzeer",
                  "de": "Pause"
                }
              },{
                "id": "stopwatch.reset",
                "label": {
                  "en": "Reset",
                  "nl": "Reset",
                  "de": "Reset"
                }
              },{
                "id": "stopwatch.start",
                "label": {
                  "en": "Start",
                  "nl": "Start",
                  "de": "Start"
                }
              }
            ]
          }
        ]
      },
      { "id": "timerAction",
        "title": {
          "en": "Timer",
          "nl": "Timer",
          "de": "Timer"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=lametric"
          },{
            "name": "action",
            "type": "dropdown",
            "values": [
              {
                "id": "countdown.pause",
                "label": {
                  "en": "Pause",
                  "nl": "Pauzeer",
                  "de": "Pause"
                }
              },{
                "id": "countdown.reset",
                "label": {
                  "en": "Reset",
                  "nl": "Reset",
                  "de": "Reset"
                }
              },{
                "id": "countdown.start",
                "label": {
                  "en": "Start",
                  "nl": "Start",
                  "de": "Start"
                }
              }
            ]
          }
        ]
      },
      { "id": "timerConfig",
        "title": {
          "en": "Timer configuration",
          "nl": "Timer instellen",
          "de": "Timer einstellen"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=lametric"
          },{
            "name": "duration",
            "type": "number",
            "min": 1,
            "max": 100000,
            "placeholder": {
              "en": "seconds",
              "nl": "seconden",
              "de": "Sekunden"
            }
          },{
            "name": "start",
            "type": "dropdown",
            "values": [
              {
                "id": "true",
                "label": {
                  "en": "Start now",
                  "nl": "Direct starten",
                  "de": "Direkt starten"
                }
              },{
                "id": "false",
                "label": {
                  "en": "Only set timer",
                  "nl": "Alleen timer instellen",
                  "de": "Nur Timer einstellen"
                }
              }
            ]
          }
        ]
      },
      { "id": "weatherAction",
        "title": {
          "en": "Weather",
          "nl": "Weer",
          "de": "Wetter"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=lametric"
          },{
            "name": "action",
            "type": "dropdown",
            "values": [
              {
                "id": "weather.forecast",
                "label": {
                  "en": "Forecast",
                  "nl": "Verwachting",
                  "de": "Vorhersage"
                }
              }
            ]
          }
        ]
      }
    ]
  }
}
